{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "watchPatterns": [
      "src/**/*",
      "package.json",
      "tsconfig.json"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": {
    "memovault-app": {
      "environment": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "ports": [
        {
          "port": 3000,
          "name": "http",
          "protocol": "TCP"
        },
        {
          "port": 3001,
          "name": "websocket",
          "protocol": "TCP"
        }
      ]
    }
  }
}
